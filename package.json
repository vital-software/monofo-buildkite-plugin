{
  "name": "monofo",
  "version": "3.0.0",
  "description": "Dynamic Buildkite pipeline generator for monorepos",
  "author": "Dominic Scheirlinck <dominic@vitaler.com>",
  "bin": {
    "monofo": "./bin/monofo.js"
  },
  "repository": "https://github.com/vital-software/monofo",
  "license": "GPL-3.0-or-later",
  "keywords": [
    "buildkite",
    "monorepo"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "run-s \"build -w\"",
    "clean": "rm -rf build",
    "commit": "git-cz",
    "git:sync": "git push plugin +refs/remotes/origin/*:refs/heads/* +refs/tags/*:refs/tags/*",
    "git:sync:setup": "git remote add plugin git@github.com:vital-software/monofo-buildkite-plugin.git",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "run-s \"lint --fix\"",
    "monofo": "./bin/monofo.js",
    "monofo:with-aws": "aws-vault exec vital-ci -- yarn monofo",
    "release": "semantic-release",
    "test": "jest",
    "test:watch": "run-s \"test --watch\""
  },
  "engines": {
    "node": ">=14.16"
  },
  "dependencies": {
    "aws-sdk": "2.1019.0",
    "bluebird": "3.7.2",
    "chalk": "5.0.0",
    "debug": "4.3.2",
    "execa": "5.1.1",
    "glob": "7.2.0",
    "got": "11.8.3",
    "js-yaml": "4.1.0",
    "lodash": "4.17.21",
    "minimatch": "3.0.4",
    "tiny-async-pool": "1.2.0",
    "toposort": "2.0.2",
    "yargs": "17.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "@google/semantic-release-replace-plugin": "1.1.0",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "@tsconfig/node14": "1.0.1",
    "@types/bluebird": "3.5.36",
    "@types/debug": "4.1.7",
    "@types/glob": "7.2.0",
    "@types/jest": "27.0.3",
    "@types/js-yaml": "4.0.5",
    "@types/lodash": "4.14.177",
    "@types/minimatch": "3.0.5",
    "@types/tiny-async-pool": "1.0.0",
    "@types/toposort": "2.0.3",
    "@types/yargs": "17.0.7",
    "@typescript-eslint/eslint-plugin": "5.4.0",
    "@typescript-eslint/parser": "5.4.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.3.0",
    "eslint-config-airbnb-typescript": "16.0.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-jest": "25.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "jest-dynalite": "3.4.4",
    "jest-fetch-mock": "3.0.3",
    "nock": "13.2.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.0",
    "semantic-release": "18.0.1",
    "ts-jest": "27.0.7",
    "typescript": "4.5.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@google/semantic-release-replace-plugin",
        {
          "replacements": [
            {
              "files": [
                "README.md"
              ],
              "from": "vital-software/monofo#v[-0-9a-z.]*:",
              "to": "vital-software/monofo#v${nextRelease.version}:",
              "results": [
                {
                  "file": "README.md",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            },
            {
              "files": [
                "hooks/pre-command"
              ],
              "from": "MONOFO_VERSION=[-0-9a-z.]*",
              "to": "MONOFO_VERSION=${nextRelease.version}:",
              "results": [
                {
                  "file": "hooks/pre-command",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            }
          ]
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "README.md",
            "hooks/pre-command"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  }
}
