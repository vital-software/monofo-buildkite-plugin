{
  "name": "monofo",
  "version": "3.3.1",
  "description": "Dynamic Buildkite pipeline generator for monorepos",
  "author": "Dominic Scheirlinck <dominic@vitaler.com>",
  "bin": {
    "monofo": "./bin/run"
  },
  "main": "dist/src/index.js",
  "repository": "https://github.com/vital-software/monofo",
  "license": "GPL-3.0-or-later",
  "keywords": [
    "buildkite",
    "monorepo"
  ],
  "scripts": {
    "build": "run-s build:ts build:after:*",
    "build:ts": "tsc -b",
    "build:after:manifest": "OCLIF_TS_NODE=0 oclif-dev manifest",
    "build:after:readme": "oclif-dev readme --multi --dir=docs/commands",
    "build:watch": "run-s \"build:ts -w\"",
    "clean": "rm -rf dist/ output/ oclif.manifest.json .combined-docs.md",
    "commit": "git-cz",
    "git:sync": "git push plugin +refs/remotes/origin/*:refs/heads/* +refs/tags/*:refs/tags/*",
    "git:sync:setup": "git remote add plugin git@github.com:vital-software/monofo-buildkite-plugin.git",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "run-s \"lint --fix\"",
    "monofo": "./bin/run",
    "monofo:with-aws": "aws-vault exec vital-ci -- yarn monofo",
    "release": "semantic-release",
    "test": "jest",
    "test:watch": "run-s \"test --watch\"",
    "prepack": "run-s build"
  },
  "engines": {
    "node": ">=14.16"
  },
  "oclif": {
    "commands": "./dist/src/commands",
    "bin": "monofo",
    "plugins": [
      "@oclif/plugin-autocomplete",
      "@oclif/plugin-not-found",
      "@oclif/plugin-which"
    ]
  },
  "files": [
    "/bin",
    "/dist/src",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@oclif/command": "1.8.9",
    "@oclif/config": "1.18.2",
    "@oclif/plugin-autocomplete": "1.0.0",
    "@oclif/plugin-help": "3.2.14",
    "@oclif/plugin-not-found": "2.2.3",
    "@oclif/plugin-which": "2.0.4",
    "aws-sdk": "2.1044.0",
    "bluebird": "3.7.2",
    "chalk": "4.1.2",
    "command-exists": "1.2.9",
    "debug": "4.3.3",
    "execa": "5.1.1",
    "glob": "7.2.0",
    "got": "11.8.3",
    "js-yaml": "4.1.0",
    "lodash": "4.17.21",
    "minimatch": "3.0.4",
    "mkdirp": "1.0.4",
    "rimraf": "3.0.2",
    "split2": "4.1.0",
    "tiny-async-pool": "1.2.0",
    "toposort": "2.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "16.0.1",
    "@commitlint/config-conventional": "16.0.0",
    "@google/semantic-release-replace-plugin": "1.1.0",
    "@oclif/dev-cli": "1.26.10",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "@tsconfig/node14": "1.0.1",
    "@types/bluebird": "3.5.36",
    "@types/command-exists": "1.2.0",
    "@types/debug": "4.1.7",
    "@types/glob": "7.2.0",
    "@types/jest": "27.4.0",
    "@types/js-yaml": "4.0.5",
    "@types/lodash": "4.14.178",
    "@types/minimatch": "3.0.5",
    "@types/mkdirp": "1.0.2",
    "@types/rimraf": "3.0.2",
    "@types/split2": "3.2.1",
    "@types/tempy": "0.3.0",
    "@types/tiny-async-pool": "1.0.0",
    "@types/toposort": "2.0.3",
    "@typescript-eslint/eslint-plugin": "5.9.0",
    "@typescript-eslint/parser": "5.9.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.6.0",
    "eslint-config-airbnb-typescript": "16.1.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "25.3.4",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "jest-dynalite": "3.4.4",
    "jest-fetch-mock": "3.0.3",
    "nock": "13.2.1",
    "npm-run-all": "4.1.5",
    "pkg": "5.5.1",
    "prettier": "2.5.1",
    "semantic-release": "18.0.1",
    "stdout-stderr": "0.1.13",
    "tempy": "1.0.1",
    "ts-jest": "27.1.2",
    "typescript": "4.5.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@google/semantic-release-replace-plugin",
        {
          "replacements": [
            {
              "files": [
                "README.md",
                "docs/artifacts.md",
                "docs/plugin.md",
                "docs/pure.md"
              ],
              "from": "vital-software/monofo#v[-0-9a-z.]*:",
              "to": "vital-software/monofo#v${nextRelease.version}:",
              "results": [
                {
                  "file": "README.md",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                },
                {
                  "file": "docs/artifacts.md",
                  "hasChanged": true,
                  "numMatches": 2,
                  "numReplacements": 2
                },
                {
                  "file": "docs/plugin.md",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                },
                {
                  "file": "docs/pure.md",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            },
            {
              "files": [
                "hooks/lib/run.bash"
              ],
              "from": "export MONOFO_VERSION=\\$\\{MONOFO_VERSION:-[-0-9a-z.]+\\}",
              "to": "export MONOFO_VERSION=<%= '${MONOFO_VERSION:-' + nextRelease.version + '}' %>",
              "results": [
                {
                  "file": "hooks/lib/run.bash",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            }
          ]
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "docs/artifacts.md",
            "docs/plugin.md",
            "docs/pure.md",
            "docs/commands/*.md",
            "hooks/lib/run.bash",
            "package.json",
            "README.md"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  },
  "pkg": {
    "scripts": [
      "dist/**/*.js"
    ]
  }
}
